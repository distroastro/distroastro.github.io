! Set the terminal text size.
*VT100*Font: 8x13

! Set the save lines.
*VT100*saveLines: 4096

! Set the general text font name and size.
*VT100*renderFont: true
*VT100*faceName: Lucida Console
*VT100*faceSize: 10

! Make backspace work correctly.
VT100*ptyInitialErase: true
VT100*backarrowKey: false

! Make double-clicking work correctly.
VT100*charClass: 33:48,35:48,37-38:48,43-47:48,58:48,61:48,63-64:48,95:48,126:48

